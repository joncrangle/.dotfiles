// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "auto_update": false,
  "project_panel": {
    "dock": "right",
  },
  "icon_theme": "Catppuccin Mocha",
  "telemetry": {
    "diagnostics": true,
    "metrics": false,
  },
  "vim_mode": true,
  "relative_line_numbers": "enabled",
  "ui_font_size": 16,
  "scrollbar": {
    "show": "never",
  },
  "buffer_font_family": "TX-02",
{{- if eq .chezmoi.os "windows" }}
  "buffer_font_fallbacks": ["JetBrainsMono Nerd Font"],
{{- else }}
  "buffer_font_fallbacks": ["Symbols Nerd Font Mono"],
{{- end }}
  "buffer_font_size": 16,
  "terminal": {
    "font_family": "TX-02",
    "font_size": 14,
    {{- if eq .chezmoi.os "windows" }}
    "font_fallbacks": ["JetBrainsMono Nerd Font"]
    {{- else }}
    "font_fallbacks": ["Symbols Nerd Font Mono"]
    {{- end }}
  },
  "git": {
    "inline_blame": {
      "enabled": false,
    },
  },
  "tab_bar": {
    "show": false,
    "show_tab_bar_buttons": false,
    "show_nav_history_buttons": false,
  },
  "tabs": {
    "file_icons": true,
  },
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha",
  },
  "languages": {
    "Python": {
      "language_servers": ["ty", "!basedpyright"],
    },
  },
}
