{{- $email := promptStringOnce . "email" "Email address" -}}
{{- $name := promptStringOnce . "name" "Username" -}}
{{- $remoteAddress := promptStringOnce . "remoteAddress" "Remote address" -}}
{{- $remoteUser := promptStringOnce . "remoteUser" "Remote username" -}}

[git]
    autoCommit = true
    autoPush = true

[data]
    email = {{ $email | quote }}
    name = {{ $name | quote }}
    RemoteAddress = {{ $remoteAddress | quote }}
    RemoteUser = {{ $remoteUser | quote }}
    {{ if eq .chezmoi.os "linux" }}
    {{- $keyboard := promptStringOnce . "keyboard" "Enter 'laptop' or 'desktop' ..." -}}
    keyboard = {{ $keyboard | quote }}
    {{ else }}
    keyboard = "desktop"
    {{ end }}

encryption = "age"

[age]
    identity = "~/.config/key.txt"
