background-blur-radius = 20
unfocused-split-opacity = 0.6
scrollback-limit = 5000
macos-titlebar-style = tabs
macos-option-as-alt = true
mouse-hide-while-typing = true

# Shell
command = /opt/homebrew/bin/zsh
shell-integration = zsh
window-save-state = always

# Keybindings
keybind = ctrl+shift+j=scroll_page_down
keybind = ctrl+shift+k=scroll_page_up
keybind = ctrl+physical:one=goto_tab:1
keybind = ctrl+physical:two=goto_tab:2
keybind = ctrl+physical:three=goto_tab:3
keybind = ctrl+physical:four=goto_tab:4
keybind = ctrl+physical:five=goto_tab:5
keybind = ctrl+physical:six=goto_tab:6
keybind = ctrl+physical:seven=goto_tab:7
keybind = ctrl+physical:eight=goto_tab:8
keybind = ctrl+physical:nine=goto_tab:9
keybind = super+shift+enter=new_split:auto
keybind = super+shift+backslash=new_split:right
keybind = super+shift+minus=new_split:down
keybind = alt+m=toggle_split_zoom
keybind = unconsumed:ctrl+h=goto_split:left
keybind = unconsumed:ctrl+l=goto_split:right
keybind = unconsumed:ctrl+j=goto_split:bottom
keybind = unconsumed:ctrl+k=goto_split:top
keybind = unconsumed:alt+h=resize_split:left,10
keybind = unconsumed:alt+l=resize_split:right,10
keybind = unconsumed:alt+j=resize_split:down,10
keybind = unconsumed:alt+k=resize_split:up,10
keybind = super+shift+i=inspector:toggle
keybind = global:cmd+`=toggle_quick_terminal
