{
	"$schema": "https://opencode.ai/config.json",
	"theme": "catppuccin",
	"provider": {
		"vllm-mlx": {
			"npm": "@ai-sdk/openai-compatible",
			"name": "vLLM-MLX",
			"options": {
				"baseURL": "http://127.0.0.1:8000/v1",
			},
			"models": {
				"mlx-community/Qwen3-4B-Sky-High-Hermes-4bit": {
					"name": "Qwen3 4B Sky High Hermes (local)",
				},
			},
		},
	},
	"enabled_providers": [
		"cerebras",
		"google-vertex",
		"google-vertex-anthropic",
		"opencode",
		"vllm-mlx",
	],
	"share": "manual",
	"permission": {
		"doom_loop": "ask",
	},
	"autoupdate": false,
	"small_model": "opencode/minimax-m2.5-free",
	"agent": {
		"explore": {
			"disable": true,
		},
		"general": {
			"disable": true,
		},
	},
	"plugin": [
		"@tarquinen/opencode-dcp@latest"
	],
	"mcp": {
		"context7": {
			"type": "remote",
			"url": "https://mcp.context7.com/mcp",
			"enabled": false,
		},
		"websearch": {
			"type": "remote",
			"url": "https://mcp.exa.ai/mcp",
			"enabled": false,
		},
		"playwriter": {
			"type": "local",
			"command": [
				"bunx",
				"playwriter@latest"
			],
			"enabled": false,
		},
	},
}
