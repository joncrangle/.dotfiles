########## Conditional "Hijacks" ##########

_is_installed() {
	command -v "$1" >/dev/null 2>&1
}

# Bat (replacing cat)
if _is_installed bat; then
	alias cat="bat"
fi

# Zoxide (replacing cd)
# Checks for 'z' command or function (since zoxide often loads as a function)
