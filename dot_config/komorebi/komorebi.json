{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.28/schema.json",
  "app_specific_configuration_path": "$Env:KOMOREBI_CONFIG_HOME/applications.yaml",
  "window_hiding_behaviour": "Cloak",
  "cross_monitor_move_behaviour": "Insert",
  "default_workspace_padding": 6,
  "default_container_padding": 6,
  "border": true,
  "border_width": 2,
  "border_offset": -1,
  "border_colours": {
    "single": "#cba6f7",
    "stack": "#a6e3a1",
    "monocle": "#eba0ac",
    "unfocused": "#fab387"
  },
  "stackbar": {
    "height": 40,
    "mode": "OnStack",
    "tabs": {
      "width": 300,
      "focused_text": "#a6e3a1",
      "unfocused_text": "#6c7086",
      "background": "#1e1e2e"
    }
  },
  "global_work_area_offset": {
    "bottom": 15,
    "left": 0,
    "right": 0,
    "top": 15
  },
  "float_rules": [
    {
      "kind": "Exe",
      "id": "zebar.exe",
      "matching_strategy": "Equals"
    }
  ],
  "monitors": [
    {
      "workspaces": [
        {
          "name": "1",
          "layout": "BSP"
        },
        {
          "name": "2",
          "layout": "HorizontalStack"
        },
        {
          "name": "3",
          "layout": "BSP"
        },
        {
          "name": "4",
          "layout": "BSP"
        },
        {
          "name": "5",
          "layout": "BSP"
        }
      ]
    }
  ]
}
